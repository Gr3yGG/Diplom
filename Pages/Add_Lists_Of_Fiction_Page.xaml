<Page x:Class="Diplom.Pages.Add_Lists_Of_Fiction_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplom.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add_Lists_Of_Fiction_Page"
      IsVisibleChanged="Doc_Vis_Change">

    <Grid Background="#FFD3EBFF">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel MaxWidth="500">
            <TextBlock Text="Автор" FontSize="20"/>
            <TextBox Text="{Binding Author}"/>


            <TextBlock Text="Имя" FontSize="20"/>
            <TextBox Text="{Binding Name}"/>

            <TextBlock Text="Жанр" FontSize="20"/>
            <TextBox Text="{Binding Genre}"/>

        </StackPanel>
        <Button Grid.Row="1" MaxWidth="500" Margin="10" Content="Сохранить" FontSize="20" Click="Save_Click"/>

    </Grid>
</Page>
