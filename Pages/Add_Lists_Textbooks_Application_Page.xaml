<Page x:Class="Diplom.Pages.Add_Lists_Textbooks_Application_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplom.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add_Lists_Textbooks_Application_Page"
      IsVisibleChanged="Doc_Vis_Change">

    <Grid Background="#FFD3EBFF">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <ScrollViewer>
            <StackPanel MaxWidth="500">
                <TextBlock Text="Автор" FontSize="20"/>
                <TextBox Text="{Binding Author}"/>

                <TextBlock Text="Имя" FontSize="20"/>
                <TextBox Text="{Binding Name}"/>

                <TextBlock Text="Класс" FontSize="20"/>
                <TextBox Text="{Binding IdClass}"/>

                <TextBlock Text="Читатель" FontSize="20"/>
                <TextBox Text="{Binding Reader}"/>

                <TextBlock Text="Библиотекарь" FontSize="20"/>
                <TextBox Text="{Binding Librarian}"/>

                <TextBlock Text="Дата выпуска" FontSize="20"/>
                <TextBox Text="{Binding DateOfIssue}"/>

                <TextBlock Text="Дата возврата" FontSize="20"/>
                <TextBox Text="{Binding ReturnDate}"/>


            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="1" MaxWidth="500" Margin="10" Content="Сохранить" FontSize="20" Click="Save_Click"/>
    </Grid>
</Page>
