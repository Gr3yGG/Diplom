<Page x:Class="Diplom.Pages.Add_Types_Of_Literature"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplom.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add_Types_Of_Literature"
      IsVisibleChanged="Doc_Vis_Change">

    <Grid Background="#FFD3EBFF">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <ScrollViewer>
            <StackPanel MaxWidth="500">
                <TextBlock Text="Автор" FontSize="20"/>
                <TextBox Text="{Binding Author}"/>

                <TextBlock Text="Художественная литература" FontSize="20"/>
                <TextBox Text="{Binding ArtisticLiterature}"/>

                <TextBlock Text="Автор" FontSize="20"/>
                <TextBox Text="{Binding Author1}"/>

                <TextBlock Text="Справочная литература" FontSize="20"/>
                <TextBox Text="{Binding RefrenceLiterature}"/>

                <TextBlock Text="Автор" FontSize="20"/>
                <TextBox Text="{Binding Author2}"/>

                <TextBlock Text="Литература по отраслям" FontSize="20"/>
                <TextBox Text="{Binding LiteratureByIndustry}"/>

                <TextBlock Text="Автор" FontSize="20"/>
                <TextBox Text="{Binding Author3}"/>

                <TextBlock Text="Учебники" FontSize="20"/>
                <TextBox Text="{Binding Textbooks}"/>

                <TextBlock Text="Автор" FontSize="20"/>
                <TextBox Text="{Binding Author4}"/>

                <TextBlock Text="Учебные пособия" FontSize="20"/>
                <TextBox Text="{Binding TrainingManuals}"/>

            </StackPanel>
        </ScrollViewer>
        <Button Grid.Row="1" MaxWidth="500" Margin="10" Content="Сохранить" FontSize="20" Click="Save_Click"/>

    </Grid>
</Page>
